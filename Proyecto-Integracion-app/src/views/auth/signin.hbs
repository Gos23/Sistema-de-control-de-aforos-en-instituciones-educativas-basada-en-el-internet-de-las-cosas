<div class="container p-4">
  <div class="row">

    <div class="col-md-4 mx-auto">
      <div class="card text-center">
        <div class="card-header">
          <h3>Iniciar sesión</h3>
        </div>
        <img src="/img/logo.png" alt="Logo Fazt" class="card-img-top mx-auto m-2  w-50">
        <div class="card-body">
          <form action="/signin" method="POST">
            <div class="form-floating mb-3">
                <input type="text" class="form-control" id="floatingUsername" name="username" placeholder="Nombre de usuario" autofocus>
                <label for="floatingUsername">Nombre de usuario</label>
            </div>
            
            <div class="form-floating mb-3">
                <input type="password" class="form-control" id="floatingPassword" name="password" placeholder="Contraseña" >
                <label for="floatingPassword">Contraseña</label>
            </div>

            <button class="btn btn-primary btn-block">
              Acceder
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>